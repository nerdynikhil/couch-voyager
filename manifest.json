{
    "name": "Couch Voyager",
    "version": "1.0",
    "description": "Explore the world without leaving your seat!",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.google.com/maps/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/maps/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
